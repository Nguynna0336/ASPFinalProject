@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ASPFinalProject.Models.Test>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i
                    class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách sản phẩm : page </span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Add Test</span>
                </a>
            </div>
        </div>
        <table class="table table-hover e-commerce-table">
            <thead>
                <tr>
                    <th>
                        TestTitle
                    </th>
                    <th>
                        Fullname Author
                    </th>
                    <th>
                        Time
                    </th>
                    <th>
                       NumberOfQuestion
                    </th>
                    <th>
                        Description
                    </th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.TestTitle
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @item.Author.Fullname
                                </div>
                            </td>

                            <td>@item.Time</td>
                            <td style="margin-left: 100px;">@item.NumberOfQuestion</td>
                            <td>@item.Description</td>

                            <td class="text-right">
                                <a class="btn btn-primary btn-tone m-r-5" asp-action="Details"
                                    asp-route-id="@item.TestId">View</a>
                                <a class="btn btn-secondary btn-tone m-r-5" asp-action="Edit"
                                    asp-route-id="@item.TestId">Edit</a>
                                <a class="btn btn-success btn-tone m-r-5" asp-action="Delete"
                                    asp-route-id="@item.TestId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div aria-label="Page navigation example">
            <ul class="pagination">
                <pager class="pager-container" list="@Model" asp-area="Teacher" asp-controller="TeacherTests"
                    asp-action="Index" />
            </ul>
        </div>
    </div>
</div>
</div>