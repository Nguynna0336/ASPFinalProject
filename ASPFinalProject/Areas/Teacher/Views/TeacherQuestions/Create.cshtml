@model List<ASPFinalProject.DTOs.Question.QuestionDTO>

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4" style="margin: auto;">
        <h1 style="text-align: center;">Create Questions</h1>
        <hr>
        <form asp-action="Create" asp-route-id="@ViewBag.TestId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Repeatable section for each question *@
            @for (int i = 0; i < ViewBag.NumberOfQuestion; i++)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Question @(i + 1)</h5>
                        <div class="form-group">
                            <label asp-for="@Model[i].Description" class="control-label"></label>
                            <input asp-for="@Model[i].Description" class="form-control" />
                            <span asp-validation-for="@Model[i].Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model[i].OptionA" class="control-label"></label>
                            <input asp-for="@Model[i].OptionA" class="form-control" />
                            <span asp-validation-for="@Model[i].OptionA" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model[i].OptionB" class="control-label"></label>
                            <input asp-for="@Model[i].OptionB" class="form-control" />
                            <span asp-validation-for="@Model[i].OptionB" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model[i].OptionC" class="control-label"></label>
                            <input asp-for="@Model[i].OptionC" class="form-control" />
                            <span asp-validation-for="@Model[i].OptionC" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model[i].OptionD" class="control-label"></label>
                            <input asp-for="@Model[i].OptionD" class="form-control" />
                            <span asp-validation-for="@Model[i].OptionD" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model[i].Answer" class="control-label"></label>
                            <input asp-for="@Model[i].Answer" class="form-control" />
                            <span asp-validation-for="@Model[i].Answer" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div> 




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
