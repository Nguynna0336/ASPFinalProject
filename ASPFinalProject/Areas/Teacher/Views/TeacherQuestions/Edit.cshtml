@model ASPFinalProject.Models.Question

@{
    ViewData["Title"] = "Edit";
}

<div class="page-header ml-5">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Default" asp-controller="Home" asp-action="index" class="breadcrumb-item">
                <i class="anticon anticon-home m-r-5"></i>Home
            </a>
            <a asp-area="Teacher" asp-controller="TeacherQuestions" asp-action="index" class="breadcrumb-item active">All questions</a>
            <span class="breadcrumb-item active">Edit</span>
        </nav>
    </div>
</div>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Edit Information</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="@Model.QuestionsId" class="form-control" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.Description" class="control-label"></label>
                    <textarea asp-for="@Model.Description" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.OptionA" class="control-label">Option A</label>
                        <input asp-for="@Model.OptionA" class="form-control option-input" id="optionA" />
                        <span asp-validation-for="@Model.OptionA" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.OptionB" class="control-label">Option B</label>
                        <input asp-for="@Model.OptionB" class="form-control option-input" id="optionB" />
                        <span asp-validation-for="@Model.OptionB" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.OptionC" class="control-label">Option C</label>
                        <input asp-for="@Model.OptionC" class="form-control option-input" id="optionC" />
                        <span asp-validation-for="@Model.OptionC" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.OptionD" class="control-label">Option D</label>
                        <input asp-for="@Model.OptionD" class="form-control option-input" id="optionD" />
                        <span asp-validation-for="@Model.OptionD" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Answer">Answer</label>
                    <select asp-for="@Model.Answer" class="form-control" id="answerSelect">
                        <option value="A">Option A</option>
                        <option value="B">Option B</option>
                        <option value="C">Option C</option>
                        <option value="D">Option D</option>
                    </select>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="form-group col-md-10">
                        <a asp-action="Index" class="btn btn-success btn-tone">Back to List</a>
                    </div>
                    <div class="form-group col-md-2 d-flex align-items-center justify-content-between">
                        <button type="submit" class="btn btn-info btn-tone">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
