@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ASPFinalProject.DTOs.Submit.CompareDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Default" asp-controller="Home" asp-action="index" class="breadcrumb-item">
                <i class="anticon anticon-home m-r-5"></i>Home
            </a>
            <span class="breadcrumb-item active">Result details </span>
        </nav>
    </div>
</div>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Question @i</h3>
            </div>
            <div class="card-body">
                <p>@item.question.Description</p>
                <div class="row">
                    <div class="col-md-6 d-flex justify-content-center">
                        <span>Option A: @item.question.OptionA</span>
                    </div>
                    <div class="col-md-6 d-flex justify-content-center">
                        <span>Option B: @item.question.OptionB</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 d-flex justify-content-center">
                        <span>Option C: @item.question.OptionC</span>
                    </div>
                    <div class="col-md-6 d-flex justify-content-center">
                        <span>Option D: @item.question.OptionD</span>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <div class="text-left">
                    @if (item.history == null)
                    {
                        <span>No history about your choice for this question</span>
                    }
                    else
                    {

                        <span>Your choice: @item.history.answer</span>
                    }
                </div>
                <div class="text-right">
                    <span>Correct answer: @item.question.Answer</span>
                </div>
            </div>
        </div>
        i++;
    }
    <div aria-label="Page navigation example">
        <ul class="pagination">
            <pager class="pager-container" list="@Model" asp-area="" asp-controller="Tests"
                   asp-action="GetDetailsResult" />
        </ul>
    </div>
</div>