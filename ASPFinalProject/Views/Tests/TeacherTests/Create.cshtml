@model ASPFinalProject.DTOs.Test.TestDTO

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4">Create Test</h1>
		<form asp-action="Create" enctype="multipart/form-data">
			<div class="row">
				<div class="row">
                    <div class="form-item">
						<label class="form-label my-3" asp-for="@Model.TestTitle"></label><sup>*</sup>
						<input asp-for="@Model.TestTitle" class="form-control" />
						<span asp-validation-for="@Model.TestTitle" class="text-danger"></span>
					</div>

					<div class="form-item">
						<div class="form-item">
							<label asp-for="@Model.Description" class="form-label my-3"></label><sup>*</sup>
							<textarea asp-for="@Model.Description" class="form-control" style="min-height: 80px;"></textarea>
							<span asp-validation-for="@Model.Description" class="text-danger"></span>
						</div>
					</div>

					<div class="form-item">
						<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
						<input type="password" asp-for="@Model.Password" class="form-control">
						<span asp-validation-for="@Model.Password" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label asp-for="@Model.Time" class="form-label my-3"></label><sup>*</sup>
						<input asp-for="@Model.Time" class="form-control">
						<span asp-validation-for="@Model.Time" class="text-danger"></span>
					</div>

					<div class="form-item">
						<label class="form-label my-3" asp-for="@Model.NumberOfQuestion"></label><sup>*</sup>
						<input asp-for="@Model.NumberOfQuestion" class="form-control" />
						<span asp-validation-for="@Model.NumberOfQuestion" class="text-danger"></span>
					</div>

				</div>

                <div class="col-md-12 col-lg-6">
					<div class="row g-4 text-center align-items-center justify-content-center pt-4 w-100">
					    <button type="buttom" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Cancel</button>
				    </div>
				</div>

                <div class="col-md-12 col-lg-6">
					<div class="row g-4 text-center align-items-center justify-content-center pt-4 w-100">
					    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Create</button>
				    </div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
