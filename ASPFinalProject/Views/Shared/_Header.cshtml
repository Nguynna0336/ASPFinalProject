                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a asp-area="Teacher" asp-controller="TeacherTests" asp-action="Index">Index</a>
                        </li>
                        <li>
                            <a asp-area="Teacher" asp-controller="TeacherTests" asp-action="Create">Create</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle" asp-area="Teacher" asp-controller="TeacherQuestions" asp-action="Index">
                        <span class="icon-holder">
                            <i class="anticon anticon-build"></i>
                        </span>
                        <span class="title">Questions</span>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle" asp-controller="Home" asp-action="Index">
                        <span class="icon-holder">
                            <i class="anticon anticon-dashboard"></i>
                        </span>
                        <span class="title">Home</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle" asp-controller="Tests" asp-action="Index">
                        <span class="icon-holder">
                            <i class="anticon anticon-appstore"></i>
                        </span>
                        <span class="title">Test</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle" asp-controller="Tests" asp-action="Enroll">
